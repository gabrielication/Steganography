<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabriele.steganography.debug.DebugActivity">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:id="@+id/imageDebug"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/doc"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java ENC"
        android:id="@+id/javaEncButDebug"
        android:layout_alignTop="@+id/imageDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java DEC"
        android:id="@+id/javaDecButDebug"
        android:layout_below="@+id/javaEncButDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS ENC"
        android:id="@+id/rsEncButDebug"
        android:layout_below="@+id/javaDecButDebug"
        android:layout_alignRight="@+id/javaDecButDebug"
        android:layout_alignEnd="@+id/javaDecButDebug"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS DEC"
        android:id="@+id/rsDecButDebug"
        android:layout_below="@+id/rsEncButDebug"
        android:layout_alignRight="@+id/rsEncButDebug"
        android:layout_alignEnd="@+id/rsEncButDebug"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageDebug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="Type text here."
        android:id="@+id/inputTextDebug" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp"
        android:id="@+id/outputTextDebug"
        android:layout_below="@+id/inputTextDebug"
        android:hint="Output will be displayed here..."
        android:layout_centerHorizontal="true" />


</RelativeLayout>
